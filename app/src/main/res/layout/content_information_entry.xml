<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InformationEntry"
    tools:showIn="@layout/activity_information_entry">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="368dp"
                android:layout_height="376dp"
                android:background="@color/colorAccent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="181dp">

                <Button
                    android:id="@+id/btnEventSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="31dp"
                    android:layout_marginStart="126dp"
                    android:text="Event Selection" />

                <TextView
                    android:id="@+id/txtIdLastNamePrompt"
                    android:layout_width="106dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/txtIdPrompt"
                    android:layout_marginBottom="141dp"
                    android:text="Last Name:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFirstNamePrompt"
                    android:layout_width="106dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/txtIdPrompt"
                    android:layout_marginTop="134dp"
                    android:text="First Name"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIdPrompt"
                    android:layout_width="106dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="73dp"
                    android:text="GroupID"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextGroupId"
                    android:layout_width="106dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/txtIdPrompt"
                    android:layout_marginEnd="87dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/background_light"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextFirstName"
                    android:layout_width="106dp"
                    android:layout_height="36dp"
                    android:layout_alignStart="@+id/editTextGroupId"
                    android:layout_alignTop="@+id/txtFirstNamePrompt"
                    android:background="@android:color/background_light"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextLastName"
                    android:layout_width="106dp"
                    android:layout_height="36dp"
                    android:layout_alignStart="@+id/editTextGroupId"
                    android:layout_alignTop="@+id/txtIdLastNamePrompt"
                    android:background="@android:color/background_light"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>